{
    "manifest_version": 3,
    "name": "LexiSync Pro",
    "version": "1.1",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_icon": "icons/icon48.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "contextMenus",
        "storage",
        "activeTab",
        "scripting" 
    ],
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": [
        "https://api.datamuse.com/*"
    ]
}